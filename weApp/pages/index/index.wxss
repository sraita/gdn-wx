/**index.wxss**/
.top-box {
  height: 40%;
  background: #727cf5;
  border-radius: 0 0 50% 50%/0 0 50px 50px;
  margin-left: -20px;
  margin-right: -20px;
  position: relative;
}
.grid {
  position: absolute;
  bottom: -15px;
  left: 30px;
  right: 30px;
  border-radius: 6px;
  box-shadow: 0 1px 15px -8px #727cf5;
  background: #fff;
  overflow: hidden;
}
.grid-item {
  flex: 1 1 50%;
  font-size: 10px;
  text-align: center;
  color: #8c8c8c;
  padding: 15px;
  cursor: pointer;
}
.grid-item .icon {
  display: block;
  font-size: 26px;
}
.grid-item .title {
  display: block;
  color: #1a1a1a;
  font-size: 14px; 
  margin-bottom: 5px;
}