<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
  <view class="cu-avatar round xl" style="background-image:url({{userInfo.avatar}});"></view>

    <!-- <image src="{{userInfo.avatarUrl}}" class="png" mode="widthFix"></image> -->
    <view class="text-xl margin-tb-lg">
    {{userInfo.name}}
    </view>
    <image src="/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view wx:if="teamId" class="cu-item"  bindtap="openPage"  data-page="../team/index/index?id={{teamId}}">
      <view class="content">
        <image src="/images/icon/team.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">我的团队</text>
      </view>
      <view class="action">
        <text class="text-grey text-sm">{{userInfo.team.name}}</text>
      </view>
    </view>
    <view wx:else class="cu-item"  bindtap="openPage"  data-page="../team/bind/bind">
      <view class="content">
        <text class="cuIcon-warn text-green"></text>
        <text class="text-grey">加入团队</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <image src="/images/icon/feedback.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
  </view>
</scroll-view>