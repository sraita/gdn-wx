<!--pages/bindAccount/band-account.wxml-->
<view class="page page-bindaccount">
  <van-cell-group>
<van-cell title="所属团队" value="请选择" is-link bind:click="showPopup" />
    <van-field value="{{ phone }}" label="手机号" placeholder="请输入手机号" error-message="手机号格式错误" border="{{ false }}" />
    <van-field value="{{ sms }}" center clearable label="短信验证码" placeholder="请输入短信验证码" border="{{ false }}" use-button-slot>
      <van-button slot="button" size="small" type="primary">发送验证码</van-button>
    </van-field>
    <van-button type="primary" block>绑定账号</van-button>
  </van-cell-group>

  <van-popup show="{{ show }}"
  round
  position="bottom"
  custom-style="height: 20%" bind:close="onClose">
    <van-picker columns="{{ columns }}" bind:change="onConfirm" />
  </van-popup>
</view>