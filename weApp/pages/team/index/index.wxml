<nav-bar title="团队管理" left-text="返回" bind:click-left="pageBack" />
<view class="page">
  <view class="cu-list menu sm-border card-menu margin-top">
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-circlefill text-grey"></text>
        <text class="text-grey">团队名称</text>
      </view>
      <view class="action">
        <text class="text-grey text-sm">{{team.name}}</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content"  bindtap="openPage"  data-page="../member/member">
        <text class="cuIcon-emojiflashfill text-pink"></text>
        <text class="text-grey">团队成员</text>
      </view>
      <view class="action">
        <view class="cu-avatar-group">
          <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10004.jpg);"></view>
          <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10003.jpg);"></view>
          <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10002.jpg);"></view>
          <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
        </view>
        <text class="text-grey text-sm">4 人</text>
      </view>
    </view>
    <view class="cu-item arrow" bindtap="openPage" data-page="../invite/invite">
      <view class="content">
        <text class="cuIcon-circlefill text-grey"></text>
        <text class="text-grey">邀请新成员</text>
      </view>
    </view>
  </view>

  <view class="cu-list menu sm-border card-menu margin-top" bindtap="openPage" data-page="../approve/approve">
    <view class="cu-item arrow">
      <view class="content">
        <text class="cuIcon-post text-grey"></text>
        <text class="text-grey">审批设置</text>
      </view>
    </view>
  </view>

  <view class="padding flex flex-direction">
    <button wx:if="userIsOwner" class="cu-btn bg-red margin-tb-sm lg">解散团队</button>
    <button wx:else class="cu-btn bg-red margin-tb-sm lg">退出团队</button>
  </view>

</view>