<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<mp-form id="form" rules="{{rules}}" models="{{formData}}">
  <mp-cells>
    <mp-cell prop="team" title="团队" link>
      <picker bindchange="bindTeamChange" data-field="team" value="{{teamIndex}}" range="{{teams}}" range-key="name">
        <view class="weui-input">{{teams[teamIndex].name}}</view>
      </picker>
    </mp-cell>
    <mp-cell prop="code" title="确认码">
      <input type="number" maxlength="4" bindinput="formInputChange" data-field="code" class="weui-input" placeholder="请输入4位数字确认码" />
    </mp-cell>
  </mp-cells>
</mp-form>

<view class="weui-btn-area">
  <button class="weui-btn" type="primary" bindtap="submitForm" disabled="{{submiting}}">
  {{submiting ? '正在提交' : '加入团队'}}
  </button>
</view>