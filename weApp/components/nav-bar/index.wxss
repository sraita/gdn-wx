/* components/nav-bar/index.wxss */
.nav-bar {
  position: fixed;
  padding-top: 20px;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #fff;
  text-align: center;
  font-size: 14px;
  z-index: 9;
}

.nav-bar.nav-bar-transparent {
  background-color: transparent;
}
.nav-bar.light-theme{
  color: #fff;
}
.nav-bar.dark-theme {
  color: #1a1a1a;
}

.nav-bar_title {
  font-size: 15px; 
  max-width: 60%;
  margin: 0 auto;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-bar_left, .nav-bar_right{
  position: absolute;
  padding: 0 16px;
}