<picker-view indicator-style="height: 40px;" style="width: 100%; height: 120px;" value="{{value}}" bindchange="bindChange">
  <picker-view-column style="margin-left:20rpx; text-align: center">
    <view wx:for="{{years}}" style="line-height: 40px">{{item}}年</view>
  </picker-view-column>
  <picker-view-column style="margin-left:20rpx; text-align: center">
    <view wx:for="{{months}}" style="line-height: 40px">{{item}}月</view>
  </picker-view-column>
  <picker-view-column style="margin-left:20rpx; text-align: center">
    <view wx:for="{{days}}" style="line-height: 40px">{{item}}日</view>
  </picker-view-column>
</picker-view>